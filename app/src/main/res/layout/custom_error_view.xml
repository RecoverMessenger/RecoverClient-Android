<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_error_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_error_snackbar"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:layout_marginHorizontal="12dp"
    android:elevation="4dp">

    <ImageView
        android:id="@+id/iv_error_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/ic_dialog_alert"
        app:tint="@android:color/white"
        android:layout_marginEnd="12dp"
        android:contentDescription="@null" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Текст ошибки"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_error_details_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Нажмите, чтобы увидеть подробности"
            android:textColor="@android:color/white" android:alpha="0.8" android:textSize="12sp"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</LinearLayout>