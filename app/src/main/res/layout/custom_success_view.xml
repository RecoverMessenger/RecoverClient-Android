<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/custom_success_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_success_snackbar"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:layout_marginHorizontal="12dp"
    android:elevation="4dp">

    <ImageView
        android:id="@+id/iv_success_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/checkbox_on_background"
        app:tint="@android:color/white"
        android:layout_marginEnd="12dp"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/tv_success_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:text="Сообщение об успехе" android:textColor="@android:color/white"
        android:textSize="14sp" />

</LinearLayout>